<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeletingchildActivity"
    android:layout_marginTop="50dp"
    android:orientation="vertical">



        <TextView
            android:id="@+id/immunized_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/edit_child_information"
            android:textColor="@color/text_Color"
            android:textSize="30sp" />






        <EditText
            android:id="@+id/childNametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="50dp"
            android:autofillHints="Email address"
            android:inputType="text"
            android:hint="@string/child_name"
            android:textAlignment="center"
            android:textColor="@color/text_Color"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/childAgetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="50dp"
            android:autofillHints="Email address"
            android:inputType="number"
            android:hint="@string/age"
            android:textAlignment="center"
            android:textColor="@color/text_Color"
            android:textSize="20sp" />





        <Button
            android:id="@+id/btn_editInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="@string/confirm_details"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_deleteChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="@string/delete_child"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>